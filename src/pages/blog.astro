---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import BlogCard from '../components/BlogCard.astro';

const blogPosts = [
  {
    title: "Mantenimiento Web: La clave del exito",
    image: "/public/images/mantenimiento_web_profesional.jpg",
    link: "/blog/mantenimientoweb"
  },
  {
    title: "Experiencia móvil perfecta: Mantenimiento para todos los dispositivos",
    image: "/public/images/experiencia_movil.jpg",
    link: "/blog/experienciamovil"
  },
  {
    title: "La importancia de una página web profesional para tu nuevo negocio",
    image: "/public/images/tu_nueva_web.jpg",
    link: "/blog/webprofesional"
  },
  {
    title: "WordPress, ¿es seguro?",
    image: "/public/images/es_wordpress_seguro.jpg",
    link: "/blog/segurowordpress"
  },
  {
    title: "Por qué es importante la seguridad web: Cómo los ciberataques pueden dañar su negocio",
    image: "/public/images/ciberataques_wordpress.jpg",
    link: "/blog/ciberataques"
  },
  {
    title: "Cambia el wp-admin para añadir una capa de seguridad a tu wordpress",
    image: "/public/images/cambiar_wp_admin.jpg",
    link: "/blog/wpadmin"
  },
  {
    title: "Por qué su sitio web necesita una auditoría: La Importancia de la Auditoría Web",
    image: "/public/images/auditoria_web.jpg",
    link: "/blog/auditoria"
  },
  {
    title: "Por qué el mantenimiento web es crucial para el SEO y cómo mantenerse a la vanguardia",
    image: "/public/images/mantenimiento_seo.jpg",
    link: "/blog/seo"
  },
  {
    title: "9 errores comunes de diseño web que están perjudicando a tu negocio online",
    image: "/public/images/errores_web.jpg",
    link: "/blog/errores_web"
  },
  {
    title: "La importancia del mantenimiento WordPress",
    image: "/public/images/profesional_wordpress.jpg",
    link: "/blog/profesional_wordpress"
  },
  {
    title: "Hablemos de que es WordPress",
    image: "/public/images/modificaciones.jpg",
    link: "/blog/modificaciones"
  },
];
---

<Layout title="Profesional Wordpress">
  <Nav />
  <section class="container mx-auto px-5 py-24">
    <h1 class="text-3xl font-bold mb-8">Nuestro Blog</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {blogPosts.map((post) => (
        <div class="mb-8">
          <BlogCard 
            title={post.title}
            image={post.image}
            link={post.link}
          />
        </div>
      ))}
    </div>
  </section>
</Layout>

