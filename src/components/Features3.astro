---
import Headline2 from './Headline2.astro';
const { align = 'center', title, subtitle, items, customSubtitle } = Astro.props;

interface Item {
  content: string;
}
---

<Headline2 title={title} subtitle={subtitle}/>
<div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 contenedor items-start justify-start">
        {items.map((item: Item, index: number) => (
            <div class="flex items-center justify-start w-full my-2" key={index}>
                <i class="fa-solid fa-arrow-right text-yellow-500 mr-4"></i>
                <p class="text-left text-lg text-gray-800">{item.content}</p>
            </div>
        ))}
    </div>
</div>

<style>
    .contenedor {
        max-width: 100%;
        margin: 0 auto;
    }
</style>

