---
interface Props {
	title?: string;
	subtitle?: string;
	imagen?: string;
  url?: string;
}

const { imagen, title, subtitle, url } = Astro.props;
---

<div class="mx-12 border-b mb-8">
  <li class="card text-center p-2">
    <img src={imagen} alt={subtitle} class="rounded-lg object-cover h-48 md:h-64 lg:h-94 w-full mb-2"/>
    <div class="p-4">
      <h2 class="text-2xl p-4">{title}</h2>
      <p class="text-2xl tex-center text-gray-800 mb-8">{subtitle}</p>
      <a href={url} class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded">
      Más información
      </a>
    </div>
  </li>
</div>

<style>
  .card img {
    border-radius: 10px;
    width: 100%;
  }
</style>
