---
import Headline2 from './Headline2.astro';
import Icono from '../styles/global.css';
const { align = 'center', title, subtitle, items } = Astro.props;

interface Item {
  content: string;
}

---
<Headline2 title={title} subtitle={subtitle}/>

<div class="container mx-auto">
    <fragment>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 contenedor items-center justify-start">
            {items.map((item: Item, index: number) => (
                <div class="border rounded-lg shadow-lg p-4 flex items-center justify-start w-full m-6" key={index}>
                    <i class="fa-solid fa-check-double mr-6"></i>
                    <p class="text-left text-2xl text-gray-800 my-2">{item.content}</p>
                </div>
            ))}
        </div>
    </fragment>
</div>

<style>
    .icon {
        font-size: 32px;
    }

    .contenedor{
        max-width: 90%; /* Establece el ancho m√°ximo del contenedor al 80% del ancho de la pantalla */
        margin: 0 auto;
    }
</style>